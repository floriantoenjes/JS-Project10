doctype html
html
  head
    title Return Book
    |
    link(rel='stylesheet', href='../static/css/style.css')
    include ./partials/_nav.pug
  body
    h1 Patron: Return Book
    |
    p
      strong Book Title:
      | #{loan.book.title}
    |
    p
      strong Loaned By:
      | #{loan.patron.first_name} #{loan.patron.last_name}
    |
    p
      strong Loaned On:
      | #{loan.loaned_on}
    |
    p
      strong Return By:
      | #{loan.return_by}
    |
    form(action="", method="POST")
      p
        label(for='returned_on') Returned on:
        input#returned_on(type='text', value=returned_on, name="returned_on")
      |
      p
        input(type='submit', value='Return Book')
