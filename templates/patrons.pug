doctype html
html
  head
    title Patrons
    |
    link(rel='stylesheet', href='static/css/style.css')
  nav
    ul
      li
        a(href='all_books') Books
      |
      li
        a(href='all_patrons') Patrons
      |
      li
        a(href='all_loans') Loans
  body
    h1 Patrons
    |
    p
      a.button(href='new_patron.html') Create New Patron
    |
    table
      thead
        tr
          th Name
          |
          th Address
          |
          th Email
          |
          th Library ID
          |
          th Zip
      |
      tbody
        each patron in patrons
            tr
              td
                a(href='patron_detail.html') #{patron.first_name} #{patron.last_name}
              |
              td #{patron.address}
              |
              td #{patron.email}
              |
              td #{patron.library_id}
              |
              td #{patron.zip_code}
            |
